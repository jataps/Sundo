<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:orientation="vertical"
        android:id="@+id/date_list">
        
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="MM/DD/YYYY"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="20sp"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandable_layout">

            <TextView
                android:id="@+id/tvToSchool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="To school"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="15sp"
                />
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/to_school_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvToSchool"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandable_layout2">

            <TextView
                android:id="@+id/tvToHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="To home"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="15sp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/to_home_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvToHome"
                />

        </RelativeLayout>
        
    </LinearLayout>

</androidx.cardview.widget.CardView>