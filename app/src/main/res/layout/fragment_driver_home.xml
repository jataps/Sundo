<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DriverFragmentHome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mapTitleDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DRIVER HOME FRAGMENT"
            android:textSize="20dp"
            android:textColor="@color/grey"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapViewDriver"
            android:apiKey="AIzaSyAqm04uBwJCxGsXU7oP0Y_DgpzYiLiOCXA"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/mapTitleDriver"
            android:layout_above="@id/gpsBtn"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gpsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/red"
            android:text="GPS OFF"/>

    </RelativeLayout>

</FrameLayout>